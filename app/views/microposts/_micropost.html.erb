<li class="micropost" id="micropost-<%= micropost.id %>">
	<%= link_to gravatar_for(micropost.user, size: 25), micropost.user, class: "micropost-avatar" %>
	<p class="micropost-user"><%= link_to micropost.user.name, micropost.user %></p>
	<p class="micropost-content"><%= micropost.content %><%= image_tag micropost.picture.url if micropost.picture? %></p>
	<p class="micropost-timestamp"><small><%= time_ago_in_words(micropost.created_at) %> ago</small>
	<% if current_user?(micropost.user) %>
		<%= link_to "delete", micropost, method: :delete,
																		 title: micropost.content %>
	<% end %>
	</p>
</li>