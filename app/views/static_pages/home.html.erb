<% if logged_in? %>
<div class="row">
	<aside class="col-md-4">
		<section class="user-info">
			<%= render 'shared/user_info' %>
		</section>
		<section class="micropost-form">
			<%= render 'shared/micropost_form' %>
		</section>
	</aside>
	<div class="col-md-8">
		<h3>Feed</h3>
		<%= render 'shared/feed' %>
	</div>
</div>
<% else %>
<div class="center jumbotron">
	<h1>Sample</h1>
	<h2 class="weak">Practice makes perfect.</h2>
	<p><%= link_to "Sign up.", signup_path, class: "btn btn-lg btn-primary" %></p>
</div>
<p class="weak">A <%= link_to image_tag("rails.png", alt: "Rails logo"), 'http://rubyonrails.org' %> application.</p>
<% end %>